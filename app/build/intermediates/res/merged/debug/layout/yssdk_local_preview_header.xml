<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/yssdk_preview_header_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/preview_back_icon"
        android:layout_width="@dimen/yssdk_preview_header_height"
        android:layout_height="match_parent"
        android:padding="@dimen/yssdk_padding_size_1"
        android:src="@drawable/back_icon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/preview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/yssdk_preview_title_textsize_large"
            android:textColor="@color/white"
            android:clickable="true"
            android:singleLine="true"
            android:ellipsize="end"/>


    </LinearLayout>

    <TextView
        android:id="@+id/share_button"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/yssdk_actionbar_item_stateful"
        android:gravity="center"
        android:text="@string/yssdk_share_icon"
        android:textColor="@color/white"
        android:textSize="24dp" />

</LinearLayout><!-- From: file:/C:/Users/TaeHong/AndroidStudioProjects/ProjectAvorka/app/build/intermediates/exploded-aar/yahoosearchsdk-0.6.0/res/layout/yssdk_local_preview_header.xml -->